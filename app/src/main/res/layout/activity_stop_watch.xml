<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".StopWatchActivity">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="322dp"
        android:layout_height="572dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        app:srcCompat="@drawable/basketball_player2" />

    <ImageView
        android:id="@+id/EasterEgg"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:background="#00F9F9F9"
        android:onClick="EasterEgg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        app:srcCompat="@drawable/timer_illustration"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/StopWatch"
        android:layout_width="255dp"
        android:layout_height="67dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Stop Watch"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#3B4A28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/StopWatchStartButton"
        android:layout_width="179dp"
        android:layout_height="120dp"
        android:background="@drawable/stopwatch_start"
        android:text="Start"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E4F62D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <Button
        android:id="@+id/LapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stopwatch_lap"
        android:text="Lap"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E9FD1C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <Button
        android:id="@+id/StopWatchStopButton"
        android:layout_width="119dp"
        android:layout_height="79dp"
        android:background="@drawable/stopwatch_stop"
        android:text="Stop"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#fb5607"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835" />

    <Button
        android:id="@+id/StopWatchResetButton"
        android:layout_width="82dp"
        android:layout_height="49dp"
        android:background="@drawable/stopwatch_reset"
        android:text="Reset"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A3FBC4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#CCF9F9F9"
        android:textColor="#003049"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <Button
        android:id="@+id/StopWatchBackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="StopWatchBackHome"
        android:text="Home"
        android:background="@drawable/homebutton"
        app:layout_constraintBottom_toTopOf="@+id/StopWatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Timerlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CCF9F9F9"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>